<aside id="kratos-about" class="widget widget_kratos_about clearfix">
    <% const aboutShowToc = is_post() && theme.widgets.includes('toc') && strip_html(toc(page.content)); %>
    <div class="photo-background"></div>
    <div class="photo-wrapper clearfix">
        <div class="photo-wrapper-tip text-center">
            <a <% if (aboutShowToc) { %> class="toc-link" href="#main" <% } else { %> href="/about/" rel="nofollow" <% } %>><img class="about-photo" src="<%= theme.avatarUri %>" alt=""/></a>
        </div>
    </div>
    <div class="textwidget">
        <% if (aboutShowToc && page.toc) { %>
            <%- toc(page.content) %>
        <% } else { %>
            <p class="text-center"><%- config.description %></p>
        <% } %>
    </div>
</aside>